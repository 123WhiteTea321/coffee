/* components/goods-list/index.wxss */
.goods-box {
    /* display在box,list,item的box层使用 */
    display: flex;
    /* 换行 */
    flex-wrap: wrap;
    /* justify-content: space-between; */
    justify-content: space-around;
    /* justify-content: flex-start; */
    /* justify-content: space-evenly; */

    margin-top: 10px;
    
}

.goods-list {
    /* 宽度设置得当会看到一层多个的效果 */
    width: 115px;
    /* padding-left: 30px; */
    /* width: 46%; */
    /* padding: 1px; */
    /* margin-left: 30px; */
    /* margin-right: 1px; */

}

/* item层可以不设样式，list里面的再设置样式 */
.goods-item {
    /* margin-right: 55px; */
    margin-right: 5px;
}

.goods-img {
    width: 110%;
}

.goods-img>image {
    /* 使图片宽度完全显示，高度会扭曲，但因为加了widthfix,图片宽高比正常 */
    width: 100%;
}

.goods-info {
    margin: 10px
}

.goods-name {
    font-size: 15px;
}

.goods-enname {
    font-size: 12px;
    color: #999999;
    /* 单行文本溢出省略号 */
    overflow: hidden;
    /* 省略号 */
    text-overflow: ellipsis;
    /* 使超出以后能变成省略号 */
    white-space: nowrap;
}

.goods-price {
    color: red;
    font-size: 13px;
    font-weight: 600;
}