/* pages/user/index.wxss */
.container{
    position: relative;
    background-color:#f5f5f5;
    height: 700px;
}

.top{
   width: 460px;

}
.top>image{
    width: 70%;
}
/* 卡片 */
.info{
    position: absolute;
    top: 84px;
    width: 300px;
    margin-left: 10px;
    margin-right: 10px;
    background-color: #ffff;
    border-radius: 15px;
    opacity: 80%;

}
.blank{
    height: 15px;
}
.personal-info{
   display: flex;
}
.avatar{
    width: 70px;
    margin-left: 7px;
}
.avatar>image{
    width: 70%;
    border-radius: 270px ;
    border: 1px solid #ffff;
}
.name{
    font-size: 13px;
    color: #0c34ba;
    margin-bottom: 5px;
}
.intro{
    font-size: 13px;
}
.userinfo{
    margin-top: 15px;
}